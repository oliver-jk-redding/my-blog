{{!< default}}
{{#post}}
   <div class="blog-post">
      <div class="blog-post-header">
         <h1 class="blog-post-title">{{title}}</h1>
         {{#unless page}}
	    <hr>
            <p class="blog-post-meta">
               {{#author}}<a href="{{url}}">{{name}}</a>{{/author}} - {{date format="DD/MM/YY"}}
            </p>
	    <hr>
         {{/unless}}
      </div>


      <section class="post-content">
         {{content}}
      </section>

   </div>
   <section>
      {{#if tags}}
         <div>
            <span class="tags">Tags: {{tags separator=", "}}
            </span>
         </div>
      {{/if}}
   </section>
   {{#is "post"}}
      <section class="share">
         Share this post:
         <a class="icon-twitter share-icon" href="https://twitter.com/intent/tweet?text={{encode title}}&amp;url={{url absolute="true"}}" onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
         </a>
         <a class="icon-facebook share-icon" href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}" onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
         </a>
         <a class="icon-google-plus share-icon" href="https://plus.google.com/share?url={{url absolute="true"}}" onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;">
         </a>
      </section>

      <section>
         <ul class="pager">
            {{#prev_post}}
               <li><a href="{{url}}">&larr; {{title}}</a> </li>
            {{/prev_post}}
            {{#next_post}}
               <li><a href="{{url}}">{{title}} &rarr;</a></span>
               </li>
            {{/next_post}}
         </ul>
      </section>

      <div id="disqus_thread"></div>
      <script type="text/javascript">
          var disqus_shortname = 'oliverredding'; // required: replace example with your forum shortname
          var disqus_identifier = '{{post.id}}';

          /* * * DON'T EDIT BELOW THIS LINE * * */
          (function() {
              var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
              dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
              (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
          })();
      </script>
      <noscript>Please enable JavaScript to view the <a href="http://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
      <a href="http://disqus.com" class="dsq-brlink">comments powered by <span class="logo-disqus">Disqus</span></a>

   {{/is}}
{{/post}}
